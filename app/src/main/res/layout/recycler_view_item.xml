<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
      name="viewModel"
      type="com.example.twitter.MyViewModel"/>

  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
          android:id="@+id/elon_musk_img"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          app:srcCompat="@drawable/elon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elon Musk" />

    <TextView
        android:id="@+id/textTweet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="text tweet" />
       <!-- android:text="@{viewModel._textTweets.toString()}" /> -->


    </LinearLayout>
  </LinearLayout>
</layout>